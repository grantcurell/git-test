apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: es-master-statefulset
spec:
  selector:
    matchLabels:
      component: elasticsearch
      role: master
  serviceName: "es-master-statefulset"
  replicas: {{ elastic_masters }}
  podManagementPolicy: "Parallel"
  template:
    metadata:
      labels:
        component: elasticsearch
        role: master
    spec:
      initContainers:
      - name: init-sysctl
        image: busybox:1.27.2
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "sysctl -w vm.max_map_count=262144; chown -R 1000:1000 /usr/share/elasticsearch/data"
        volumeMounts:
        - name: data
          mountPath: /usr/share/elasticsearch/data
        securityContext:
          privileged: true
      containers:
      - name: elasticsearch
        image: {{ elasticsearch_image }}:{{ elastic_version }}
        imagePullPolicy: IfNotPresent
        securityContext:
          privileged: true
          capabilities:
            add:
              - IPC_LOCK
        resources:
          requests:
            memory: "{{ elastic_memory }}Gi"
            cpu: "{{ elasticsearch_cpu_request }}"
        env:
        - name: NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: CLUSTER_NAME
          value: {{ elastic_cluster_name }}
        - name: HTTP_ENABLE
          value: "false"
        - name: ES_JAVA_OPTS
          value: -Xms{{ elastic_memory // 2 }}g -Xmx{{ elastic_memory // 2 }}g
        ports:
        - containerPort: {{ elastic_data_port }}
          name: http
        - containerPort: {{ elastic_management_port }}
          name: transport
        livenessProbe:
          tcpSocket:
            port: transport
          initialDelaySeconds: 20
          timeoutSeconds: 1
          periodSeconds: 15
          failureThreshold: 5
        volumeMounts:
        - name: data
          mountPath: {{ elastic_pv_data_path }}
        - name: elastic
          mountPath: {{ elastic_config_path }}/elasticsearch.yml
          subPath: elasticsearch.yml
      volumes:
      - name: elastic
        configMap:
          name: elastic
      nodeSelector:
        elasticsearch: "true"
  volumeClaimTemplates:
  - metadata:
      name: data
    spec:
      accessModes: ["ReadWriteOnce"]
      storageClassName: rbd
      resources:
        requests:
          storage: {{ elastic_pv_size }}Gi
